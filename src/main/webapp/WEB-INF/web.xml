<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">

    <display-name>lemonadeshop</display-name>

    <!-- Creation de client -->
    <servlet>
        <servlet-name>CreationClient</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.CreationClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationClient</servlet-name>
        <url-pattern>/creationClient</url-pattern>
    </servlet-mapping>

    <!-- Creation de commande -->
    <servlet>
        <servlet-name>CreationCommande</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.CreationCommande</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationCommande</servlet-name>
        <url-pattern>/creationCommande</url-pattern>
    </servlet-mapping>

    <!-- Lister commandes -->
    <servlet>
        <servlet-name>ListerCommandes</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.ListerCommandes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListerCommandes</servlet-name>
        <url-pattern>/listerCommandes</url-pattern>
    </servlet-mapping>

    <!-- Lister clients -->
    <servlet>
        <servlet-name>ListerClients</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.ListerClients</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListerClients</servlet-name>
        <url-pattern>/listerClients</url-pattern>
    </servlet-mapping>

    <!-- Supprimer client-->
    <servlet>
        <servlet-name>SupprimerClient</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.SupprimerClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupprimerClient</servlet-name>
        <url-pattern>/supprimerClient</url-pattern>
    </servlet-mapping>
    <!-- Supprimer Commande-->
    <servlet>
        <servlet-name>SupprimerCommande</servlet-name>
        <servlet-class>com.johndcoding.lemonadeshop.view.controler.SupprimerCommande</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupprimerCommande</servlet-name>
        <url-pattern>/supprimerCommande</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

